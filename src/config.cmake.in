# - Config file for the Serenity package
# It defines the following variables
#  SERENITY_INCLUDE_DIRS - include directories for Serenity
#  SERENITY_LIBRARIES    - libraries to link against
#  SERENITY_EXECUTABLE   - the serenity executable

# Compute paths
get_filename_component(SERENITY_CMAKE_DIR "${CMAKE_CURRENT_LIST_FILE}" PATH)
set(SERENITY_INCLUDE_DIRS "@CONF_INCLUDE_DIRS@")

# Our library dependencies (contains definitions for IMPORTED targets)
if(NOT TARGET serenity AND NOT serenity_BINARY_DIR)
  include("${SERENITY_CMAKE_DIR}/serenityTargets.cmake")
endif()

# These are IMPORTED targets created by serenityTargets.cmake
set(SERENITY_LIBRARIES serenity)
set(SERENITY_EXECUTABLE serenity_exe)

# aliases
add_library(serenity::shared ALIAS serenity)
add_library(serenity::exe    ALIAS serenity_exe)
